<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frgmCont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/fragment1"
            android:name="com.khrystynahryb.notification.Fragment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/text1"
        android:id="@+id/tv_text"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textSize="50sp"
        android:background="@drawable/bg"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_remote_1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginLeft="18sp"
        android:src="@drawable/ic_remove"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/iv_remote_2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginLeft="18sp"
        android:src="@drawable/ic_remove"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/iv_remote_3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginLeft="18sp"
        android:src="@drawable/ic_remove"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/iv_remote_4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginLeft="18sp"
        android:src="@drawable/ic_remove"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_add_1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginRight="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />
    <ImageView
        android:id="@+id/iv_add_2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginRight="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />
    <ImageView
        android:id="@+id/iv_add_3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginRight="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />
    <ImageView
        android:id="@+id/iv_add_4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="16sp"
        android:layout_marginRight="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />

</androidx.constraintlayout.widget.ConstraintLayout>